[Unit]
Description=SenseGrid Raspberry Pi Controller
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/SenseGrid/hardware
ExecStart=/home/pi/SenseGrid/hardware/.venv/bin/python pi_main.py
Restart=always
RestartSec=10
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
