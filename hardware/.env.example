# Arduino Serial Connection
ARDUINO_SERIAL_PORT=/dev/ttyUSB0
ARDUINO_BAUD_RATE=9600

# ESP32-CAM
ESP32_CAM_URL=http://192.168.1.100/capture
ESP32_CAPTURE_INTERVAL=3.0

# GPIO Pins (BCM numbering)
GPIO_FAN_RELAY=17
GPIO_BUZZER=27
GPIO_LIGHT_RELAY=22
RELAY_ACTIVE_LOW=True

# Detection Settings
DETECTION_CONFIDENCE=0.5
ALERT_COOLDOWN=60.0

# Backend Connection
BACKEND_API_URL=http://localhost:8000/api
BACKEND_SOCKETIO_URL=http://localhost:8000

# Pi Authentication (create this user in backend first)
PI_USER_EMAIL=pi@sensegrid.local
PI_USER_PASSWORD=sensegrid123

# Device Identification
DEVICE_ID=pi-living-room
ROOM_ID=living-room
HOME_ID=home-1
